<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults %>
  </head>
  <body>
	<div class="toolbar"> 
		<nav class="left">
			<ul id="navigation">
				<li><%= link_to "Home", root_path %></li>
				<li><%= link_to "Leagues", :controller => "pages", :action => "league" %></li>
				<li><%= link_to "Info", :controller => "pages", :action => "about" %></li>
				<li><%= link_to "Contact", :controller => "pages", :action => "contact" %></li>
				<% if signed_in? %>
				<li><%= link_to "Users", users_path %></li>
				<% end %>
			</ul>
		</nav>
		<nav class="right">
			<ul>
				<% if signed_in? %>
				<li><%= link_to current_user.email, current_user %></li>
				<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
				<% else %>
				<li><%= link_to "Sign in", signin_path %></li>
				<% end %>
			</ul>
		</nav>
	</div>

    <div class="container ">
	<h1>Wimbledon Squash</h1>
		<div class="content_border">
		<div class="content">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      
      
      
      
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
      
      </div>
      </div>

<!-- SideBar-->
	<div class="sidebar">
		<!-- Latest results from the database -->
		<h4>Latest Results</h4>
		<div class="patch round">
		<table class="results_box">
		<%
		m = Match.all.last(5)
		m.each do |match|
			j = match.id
			r = Result.where(:match_id => j)
		%>
		  <tr class="results_box">
		    <td class="results_box"><%= user_by_id(r[0][:user_id]).name %></span></td>
		    <td class="results_box"><%= r[0][:score] %></td>
		    <td class="results_box"><%= r[1][:score] %></td>
		    <td class="results_box"><%= user_by_id(r[1][:user_id]).name %></td>
		<% end %>
		</table>
		</div>
		<h4>Team Matches</h4>
		
		<div class="patch">
		None<br /><br />
		</div>
		
		<h4>Links</h4>
		<div class="patch">
		Surrey Cup<br />
		Surrey SRA<br />
		Squashsite<br />
		</div>
	</div>

    </div>

    
  </body>
</html>



